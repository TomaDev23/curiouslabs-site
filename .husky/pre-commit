echo "ğŸ›¡ï¸ Running pre-commit validation..."

# Prevent node_modules commits
if git diff --cached --name-only | grep -q '^node_modules/'; then
  echo "âŒ ERROR: node_modules/ files are staged for commit!"
  exit 1
fi

echo "âœ… Pre-commit passed"
exit 0

# Optional: Run ESLint on staged JS/JSX files
STAGED_JS_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.jsx?$')
if [ -n "$STAGED_JS_FILES" ]; then
  echo "ğŸ” Running ESLint on staged JS/JSX files..."
  npx eslint $STAGED_JS_FILES || {
    echo "âŒ ESLint found issues. Please fix them before committing.";
    exit 1;
  }
fi

# Optional: Run Prettier on staged files
echo "ğŸ’… Running Prettier on staged files..."
npx prettier --check --ignore-unknown $(git diff --cached --name-only --diff-filter=d) || {
  echo "âŒ Prettier found formatting issues. Please run 'npx prettier --write' on your files.";
  exit 1;
}

echo "âœ… Pre-commit passed." 